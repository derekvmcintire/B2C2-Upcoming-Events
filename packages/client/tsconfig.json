{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowUmdGlobalAccess": false,
    "types": ["react/jsx-runtime"]
  },
  "include": ["src"],
  "exclude": ["api"],
  "references": [
    { "path": "./api/tsconfig.api.json" }
  ]
}