{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["packages/*"],  // Adjust for your specific monorepo structure
  "references": [
    { "path": "./packages/client/tsconfig.client.json" },
    { "path": "./packages/eventsApi/tsconfig.api.json" }
  ]
}
